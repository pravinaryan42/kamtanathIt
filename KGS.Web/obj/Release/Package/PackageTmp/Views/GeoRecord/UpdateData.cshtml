@model KGS.DTO.SelectionModel
@{
    ViewBag.Title = "Update Records";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<style>
    .hidden {
        display: none;
    }
</style>
<div class="col-sm-12">
    <div> @Html.Partial("_MessageNotification")</div>
</div>
<div class="row mb-2">
    <div class="col-lg-12">
        @using (Html.BeginForm("UpdateDataCollection", "GeoRecord", null, FormMethod.Post, new { @class = "form-horizontal", id = "formAddEditAllergy" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">
                        Update Records
                    </h5>
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>Select Column</label>
                                    @Html.DropDownListFor(model => model.SelectedBlock, Model.BlockDataList, "All", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>Update Value From</label>
                                    @Html.TextBoxFor(model => model.UpdateFrom, true, null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="form-group">
                                    <label>To</label>
                                    @Html.TextBoxFor(model => model.UpdateTo, true, null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-6">
                                <button class="btn btn-primary" type="submit">Update</button>
                                <button class="btn btn-primary" type="submit">Reset</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
</div>





@section scripts{

    <script src="~/Scripts/CustomJs/updaterecord-index.js"></script>
}

