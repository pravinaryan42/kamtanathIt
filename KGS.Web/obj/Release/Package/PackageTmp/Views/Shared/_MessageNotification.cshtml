

@{

    var model = (ViewData["NotificationModel"] ?? TempData["NotificationModel"]) as KGS.Web.Models.Others.Notification;
    bool slideUp = Convert.ToBoolean((ViewData["IsSlideUp"] ?? TempData["IsSlideUp"]) ?? true);
    var requestPage = Request.Url.AbsoluteUri.ToLower();
  
}

@if (model != null)
{

    <div id="divMessagePanel" class="alert alert-@(model.Type.ToString().ToLower()) msg-box @(model.Type.ToString().ToLower()) alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        @if ((model.Type.ToString().ToLower()) == "success")
        {
            <i class="fa fa-check"></i>
        }
        else if ((model.Type.ToString().ToLower()) == "info")
        {
            <i class="fa fa-info"></i>
        }
        else if ((model.Type.ToString().ToLower()) == "warning")
        {
            <i class="fa fa-exclamation-triangle"></i>
        }
        else if ((model.Type.ToString().ToLower()) == "danger")
        {
            <i class="fa fa-exclamation-triangle"></i>
        }
        <p>@Html.Raw(model.Message)</p>
    </div>

}


