
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h2>Dashboard</h2>

<div class="row">

    <div class="col-lg-6 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Operator Wise Records</h5>
                <canvas id="barChart" style="height:130px"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">District Wise Records</h5>
                <canvas id="pieChart" style="height:150px"></canvas>
            </div>
        </div>
    </div>

</div>

<div class="row">

    <div class="col-lg-12 col-12 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">GP Wise Records</h5>
                <canvas id="barChart1" style="height:130px"></canvas>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    @Scripts.Render("~/bundles/chartjs", "~/Scripts/CustomJs/dashboard-index.js")
}
